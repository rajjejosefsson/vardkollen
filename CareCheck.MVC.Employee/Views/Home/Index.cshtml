@{
    ViewBag.Title = "Home Page";
}

<style>
    .login-form-holder {
        background-color: rgb(255, 255, 255);
        border-radius: 10px;
        box-shadow: 0 3px 3px -3px #777;
        height: 300px;
        margin-bottom: 230px;
        margin-left: 60px;
        margin-top: 100px;
        max-width: 282px;
        padding: 15px;
    }

    h1 {
        color: white;
        float: right;
        font-size: 60px;
        font-weight: 900;
        margin-top: 210px;
    }

    .center-block {
        margin-top: 60px;
    }

    #inputPassword {
        margin-top: 10px;
    }


    .form-signin-heading {
        margin-bottom: 19px;
        margin-top: 15px;
    }

    body {
        background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(../../Content/Images/happyman.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .Push {
        height: 41px;
    }

    @@media (min-width: 2560px) {
        .Push {
            height: 361px;
        }
    }


    @@media (max-width: 1200px) {
        h1 {
            float: left;
            font-size: 45px;
            margin-top: 60px;
        }


        .login-form-holder {
            margin-left: 0px;
            margin-top: 0px;
        }
    }


    @@media (max-width: 600px) {
    }


    @@media (max-width: 480px) {
        h1 {
            font-size: 35px;
        }
    }
</style>


<div class="row">
    <div class="col-md-12">
        <!-- Content Goes here  -->
        <div class="col-xs-12 col-md-6">
            <h1 class="">Vi anställda gör skillnad</h1>
        </div>

        <div class="col-xs-12 col-md-6">
            <div class="login-form-holder">
                <form>
                    <h2>Inloggning</h2>
                    <div class="form-group">
                        <label for="inputEmail" class="sr-only">Email address</label>
                        <input type="email" id="inputEmail" class="form-control" placeholder="email@gmail.com" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only">Lösenord</label>
                        <input type="password" id="inputPassword" class="form-control" placeholder="Lösenord" required>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="remember-me"> Kom ihåg mig
                        </label>
                    </div>

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Logga in</button>
                </form>
            </div>

        </div>
        <!-- Content Ends here  -->
    </div>
</div>

<div class="Push"> </div>