@{
    ViewBag.Title = "About Page";
}

<link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.0.1/fullcalendar.min.css" rel="stylesheet" />
<link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.min.css" rel="stylesheet" />



<style>

    #calendar {
        max-width: 900px;
        margin: 0 auto;
    }

    .fc-view-container {
        background-color: white;
    }


    .add-schedule-holder {
        margin-top: 70px;
        width: 300px;
        padding: 20px;
        background-color: white;
        box-shadow: 0 3px 3px -3px #777;
        border-radius: 6px;
    }
</style>




<h1 class="text-center">Personal schema</h1>


<div class="row">
    <div id="calendar"></div>
</div>




<div class="row">
    <div class="add-schedule-holder center-block">
        <h3>Lägg till i schema</h3>
        <form>
            <div class="form-group">
                <label>Datum</label>
                <input class="form-control" data-provide="datepicker">
            </div>
            <div class="form-group">
                <label>Namn</label>
                <input class="form-control" placeholder="Namn">
            </div>
            <button class="btn btn-success">Lägg till</button>
        </form>
    </div>
</div>



@section scripts {
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.16.0/moment.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.0.1/fullcalendar.min.js"></script>
